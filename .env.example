# Environment variables for GoatMorpho
# Copy this file to .env and modify as needed

# Django Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,goatmorpho.info

# Database Configuration
DB_NAME=goat_morpho
DB_USER=goat_morpho_user
DB_PASSWORD=123456789
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_HOST=127.0.0.1
